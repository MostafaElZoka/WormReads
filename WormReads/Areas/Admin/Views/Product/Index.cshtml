@model List<Product>

<div class="card shadow my-4 border-0">
    <div class="card-header bg-info bg-gradient py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2>Products</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="">
            <div class="row">
                <div class="col text-end">
                    <a asp-action="Create" class="btn btn-primary mb-2"><i class="bi bi-plus-lg"></i> Create New Product</a>
                </div>
                <table class="table table-bordered table-striped table-hover mt-3">
                    <thead>
                        <tr class="text-center">
                            <th>Title</th>
                            <th>Author</th>
                            <th>ISBN</th>
                            <th>Price</th>
                            <th>Category</th>
                            <th>Actions </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td class="text-center">@product.Title</td>
                                <td class="text-center">@product.Author</td>
                                <td class="text-center">@product.ISBN</td>
                                <td class="text-center">@product.ListPrice</td>
@*                                 <td class="text-center">@product.Category.Name</td>
 *@                                <td class="text-center">
                                    <div class="w-75 btn-group ">
                                        <a asp-action="edit" asp-route-id="@product.Id" class="btn btn-primary mx-2">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                        <a asp-action="delete" asp-route-id="@product.Id" class="btn btn-secondary">
                                            <i class="bi bi-trash3"></i> Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>


        </div>
    </div>
</div>
