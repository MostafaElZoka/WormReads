@model Company

<div class="card shadow my-4 border-0">
    <div class="card-header bg-info bg-gradient py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2>@(Model.Id !=0 ? "Update" : "Create") Company</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-2">
        <div class="row">
            <div class="col-12">
                <form method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" /> @* the hidden input must be there in order know whether we are updating or creating *@
                    <div class="border-0 ">
                        <div class="m-2">
                            <label asp-for="Name" class="form-label mb-2 mt-4">Name</label>
                            <input asp-for="Name" class="form-control mb-2" placeholder="Enter Name">
                            <span class="text-danger" asp-validation-for="Name"></span>
                        </div>
                        <div class="m-2">
                            <label asp-for="State" class="form-label mt-4 mb-2">State</label>
                            <input asp-for="State" class="form-control mb-2" placeholder="Enter State">
                        </div>
                        <div class="m-2">
                            <label asp-for="City" class="form-label mt-4 mb-2">City</label>
                            <input asp-for="City" class="form-control mb-2" placeholder="Enter City">
                        </div>
                        <div class="m-2">
                            <label asp-for="StreetAddress" class="form-label mt-4 mb-2">StreetAddress</label>
                            <input type="text" asp-for="StreetAddress" class="form-control mb-2" placeholder="StreetAddress">
                        </div>
                        <div class="m-2">
                            <label asp-for="PostalCode" class="form-label mt-4 mb-2">PostalCode</label>
                            <input asp-for="PostalCode" class="form-control mb-2" placeholder="Enter PostalCode" />
                        </div>
                        <div class="m-2">
                            <label asp-for="PhoneNumber" class="form-label mt-4 mb-2">PhoneNumber</label>
                            <input asp-for="PhoneNumber" class="form-control mb-2" placeholder="Enter Phone Number"  />
                        </div>


                        <div class="row d-flex justify-content-between mx-auto pt-2">
                            @if (Model.Id == 0)
                            {
                                <div class="col-6 col-md-3">
                                    <button type="submit" class="btn btn-primary form-control">Create</button>
                                </div>

                            }
                            else
                            {
                                <div class="col-6 col-md-3">
                                    <button type="submit" class="btn btn-primary form-control">Update</button>
                                </div>
                            }
                            <div class="col-6 col-md-3 text-start">
                                <a asp-controller="Company" asp-action="Index" class="btn btn-outline-info form-control">Back To Copanies</a>
                            </div>
                        </div>
                    </div>

                </form>

            </div>
        </div>
    </div>
</div>


@section scripts {
    @{
        <partial name="_ValidationScriptsPartial" />

        <script>

        </script>
    }
 }