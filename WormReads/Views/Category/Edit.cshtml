@model Category

<div class="card shadow mt-4 border-0">
    <div class="card-header bg-info bg-gradient py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2>Edit Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <div class="border-0 p-4">
@*                 <div class="row text-center ">
                    <h1>Edit Category</h1>
                </div> *@
                <div class="m-3">
                    <label asp-for="Name" class="form-label mb-2 mt-4">Category Name</label>
                    <input asp-for="Name" class="form-control mb-2" placeholder="Enter Category name">
                    <span class="text-danger"></span>
                </div>
                <div class="m-3">
                    <label asp-for="DisplayOrder" class="form-label mt-4 mb-2">Display Order</label>
                    <input asp-for="DisplayOrder" class="form-control mb-2" placeholder="Enter Display Order">
                    <span class="text-danger" asp-validation-for="DisplayOrder"></span>
                </div>

                <div class="row d-flex justify-content-between mx-auto">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Update</button>
                    </div>
                    <div class="col-6 col-md-3 text-start">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-info form-control">Back To Categories</a>
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>


@section scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
 }