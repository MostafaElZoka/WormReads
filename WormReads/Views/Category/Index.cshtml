@model List<Category>

<div class="card shadow mt-4 border-0">
    <div class="card-header bg-info bg-gradient py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2>Categories</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="container">
            <div class="row">
                <div class="col text-end">
                    <a asp-action="Create" class="btn btn-primary mb-2"><i class="bi bi-plus-lg"></i> Create New Category</a>
                </div>
                <table class="table table-bordered table-striped table-hover mt-3">
                    <thead>
                        <tr class="text-center">
                            <th>Name</th>
                            <th>Display Order</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var category in Model.OrderBy(u => u.DisplayOrder))
                        {
                            <tr>
                                <td class="text-center">@category.Name</td>
                                <td class="text-center">@category.DisplayOrder</td>
                                <td class="text-center">
                                    <div class="w-75 btn-group ">
                                        <a asp-action="edit" asp-route-id="@category.Id" class="btn btn-primary mx-2">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                        <a asp-action="delete" asp-route-id="@category.Id" class="btn btn-secondary">
                                            <i class="bi bi-trash3"></i> Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>


    </div>
</div>
</div>
