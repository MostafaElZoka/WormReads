@model Category

<form method="post">
    <div class="border p-4 m-4">
        <div class="row text-center">
            <h1>Create Category</h1>
        </div>
        <div>
            <label asp-for="Name" class="form-label mt-4">Category Name</label>
            <input asp-for="Name" class="form-control" placeholder="Enter Category name" fdprocessedid="ajw5sv">
        </div>
        <div>
            <label asp-for="DisplayOrder" class="form-label mt-4">Display Order</label>
            <input asp-for="DisplayOrder" class="form-control" placeholder="Enter Display Order">
        </div>
        <div class="row p-3 d-flex justify-content-between mx-auto">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Submit</button>

            </div>
            <div class="col-6 col-md-3 text-start">
                <a asp-controller="Category" asp-action= "Index" class="btn btn-outline-info form-control">Back To Categories</a>
            </div>
        </div>
    </div>

</form>